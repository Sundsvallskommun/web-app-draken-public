generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model FeatureFlags {
  id        Int      @id @default(autoincrement())
  name      String
  enabled   Boolean  @default(false)
  application  String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, application])
}